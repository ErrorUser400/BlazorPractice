@page "/colorgradient"
@rendermode InteractiveWebAssembly

<h3>ColorGradient</h3>

<div>@RendererInfo.Name</div>

<div class="d-flex gap-2">
    <form class="d-flex flex-column gap-1">
        <span>To</span>
        <input disabled="@(!RendererInfo.IsInteractive)" value="@userTo" type="text" onchange="@((ChangeEventArgs e) => userTo = e.Value?.ToString())" maxlength="6" />
        <span>From</span>
        <input disabled="@(!RendererInfo.IsInteractive)" value="@userFrom" type="text" onchange="@((ChangeEventArgs e) => userFrom = e.Value?.ToString())" maxlength="6"/>
        <span>Direction</span>
        <select value="@direction" name="direction" onchange="@((ChangeEventArgs e) => direction = e.Value?.ToString())">
            <option value="top">Top</option>
            <option value="Bottom">Bottom</option>
            <option value="left">Left</option>
            <option value="right">right</option>
        </select>
    </form>
    <div style="height: 300px ; width: 300px; background-image: linear-gradient(to @direction, #@userFrom, #@userTo);">
    </div>
</div>


@code {
    public string userTo { get; set; } = "000000";
    public string userFrom { get; set; } = "ffffff";
    public string direction { get; set; } = "top";
}
